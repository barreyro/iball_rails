<h3 class="error-heading">
  <% if current_user %>
    <%= @current_user.errors.messages if @current_user.errors.messages.any? %>
  <% end %>
</h3>

<h1>Create a user:</h1>
<div class="form-info">
  <%= form_for User.new do |f| %>
    <%= f.text_field :email, placeholder: "Email" %><br>
    <%= f.text_field :username, placeholder: "Username" %><br>
    <%= f.password_field :password, placeholder: "Password" %><br>
    <%= f.text_field :city, placeholder: "City" %><br>
    <%= f.text_field :state, placeholder: "State" %><br>
    <%= f.text_field :age, placeholder: "Age" %><br>
    <%= f.text_field :bio, placeholder: "Bio" %><br>
    <%= submit_tag 'signup' %>
  <% end %>
</div>
